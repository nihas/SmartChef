<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">



<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorPrimaryDark"/>

        <!--<View-->
            <!--android:id="@+id/bgColor"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#808080"/>-->

        <ImageView
            android:id="@+id/maskImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.5dp"
            android:src="@drawable/empty_photo"
            android:background="#808080"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginLeft="7dp"
    android:layout_toRightOf="@+id/maskImage">

    <TextView
        android:id="@+id/ingredientTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banana"
         />

    <TextView
        android:id="@+id/ingredientMeasure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banana"
        />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/minusToCup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-"
        android:textColor="#000000"
        android:background="@drawable/custom_round_clicked"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/addToCup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:background="@drawable/custom_round_clicked"
        />
</LinearLayout>

</LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/maskImage"
        android:background="@color/colorPrimaryDark"/>


</RelativeLayout>