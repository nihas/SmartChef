<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/maskImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="0.5dp"
            android:src="@drawable/empty_photo"
            android:background="#808080"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:layout_toLeftOf="@+id/linearLayout"
    android:layout_toRightOf="@+id/maskImage"
    android:id="@+id/linearLayout2">

    <TextView
        android:id="@+id/ingredientTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banana"
         />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:background="@drawable/circle_border"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/ingredientMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_alignParentTop="true" />

</LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/vara">
        <TextView
            android:id="@+id/minusToCup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/custom_clicked_black"
            />




        <TextView
            android:id="@+id/addToCup"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:visibility="gone"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/custom_clicked"
            />
    </LinearLayout>


    <View
        android:id="@+id/vara"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/maskImage"
        android:background="@color/colorPrimaryDark"/>


</RelativeLayout>